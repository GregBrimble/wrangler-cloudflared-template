{
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean": "lerna run --parallel clean",
    "clean:node": "lerna run --parallel clean:node && rimraf node_modules package-lock.json",
    "start": "node index.js",
    "start:client": "lerna run --stream --scope client web",
    "start:tunnel": "cloudflared tunnel --url localhost:19006 --metrics localhost:8081",
    "start:worker": "wrangler dev",
    "build": "lerna run --stream --scope client build:web",
    "predeploy": "npm run build",
    "deploy": "wrangler publish --env production",
    "lint": "lerna run lint",
    "format": "lerna run format"
  },
  "devDependencies": {
    "@cloudflare/wrangler": "beta",
    "cross-fetch": "^3.0.4",
    "lerna": "3.20.2",
    "rimraf": "3.0.2",
    "ts-loader": "6.2.1",
    "typescript": "3.7.5"
  }
}
